<h1 class="marginBottom20"><%= t("nominations.your_nominations") %></h1>

<div id="nominations" class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th width="30%"><%= t("forms.badge") %></th>
        <th width="20%"><%= t("forms.recipient") %></th>
        <th width="50%"><%= t("dict.votes") %></th>
      </tr>
    </thead>
    <% @nominations.each do |nomination| %>
      <tr>
        <td><%= image_tag nomination.badge.image_url, width: 80, class: "avatar" %><p><%= nomination.badge.short_name %></p></td>
        <td><%= nomination.recipient.full_name %></td>
        <td><%= nomination.votes.size %></td>
      </tr>
    <% end %>
  </table>
</div>
