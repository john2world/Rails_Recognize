  <![endif]-->

  <div id="wrapper-outer" class="wrapper-outer">
    <div class="wrapper">
      <%= yield %>
    </div>
  </div>
  
  <%= yield :pagetemplates %>
  <%= render "js_templates/autocomplete" %>

  <!--[if lt IE 9]>
    </div>
  <![endif]-->
  
  <script type="text/javascript">
    window.R.init();
  </script>

  <%= render partial: "/layouts/ruby_to_js"%>

